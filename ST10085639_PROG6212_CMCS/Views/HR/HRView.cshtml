@model List<ST10085639_PROG6212_CMCS.Models.Claim>
@using System.Globalization

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-3">HR Dashboard</h2>
    <h5 class="text-muted mb-4">Claim Overview</h5>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Claim ID</th>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Date Submitted</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.TotalAmount.ToString("C")</td>
                    <td>@claim.Status</td>
                    <td>@claim.SubmittedDate.ToShortDateString()</td>

                    <td>
                        <a href="/HR/Invoice?id=@claim.ClaimID"
                           class="btn btn-primary btn-sm mb-1">
                            View Invoice
                        </a>

                        <a href="/HR/DownloadInvoice?id=@claim.ClaimID"
                           class="btn btn-success btn-sm">
                            Download Invoice
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>