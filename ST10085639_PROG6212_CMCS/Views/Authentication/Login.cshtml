@* References: *@

@model ST10085639_PROG6212_CMCS.Models.User

<style>
    body {
        margin: 0;
        font: 'Helvetica Neue', Arial, san-serif;
        color: white;
        background: linear-gradient(to bottom right, #004e92, #000428, #004e92);
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .login-container {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 30px;
        border-radius: 10px;
        max-width: 400px;
        margin: 100px auto;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
        color: white;
    }

    .login-container h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .login-container input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: none;
        border-radius: 5px;
    }

    .login-container input[type="submit"] {
        background-color: #007bff;
        color: white;
        cursor: pointer;
        border: none;
    }

    .login-container input[type="submit"]:hover {
        background-color: #0056b3;
    }

    .login-container a {
        color: #007bff;
        text-decoration: none;
    }

    .login-container a:hover {
        text-decoration: underline;
    }

    .form-link {
        text-align: center;
        margin-top: 15px;
    }

    .role-dropdown {
        color: #333;
    }

    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .submit-style {
        background-color: red;
        color: white;
        padding: 15px 30px;
        border: none;
        border-radius: 20px;
        font-size: 12em;
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .submit-style:hover {
        background: #218838;
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
        transform: translate(-3px);
    }

    .submit-style:active {
        transform: translateY(0);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .alert {
        background-color: #28a745;
        color: white;
        padding: 10px;
        border-radius: 5px;
        margin-top: 15px;
        text-align: center;
    }
</style>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="login-container">
    <h2>Login</h2>

    <form asp-action="Login" method="post">
        <div>
            <label>Email</label>
            <input type="email" name="email" required />
        </div>

        <div>
            <label>Password</label>
            <input type="password" name="password" id="loginPassword" required />
        </div>

        <div class="form-link">
            <p>Don't have an acount? <a href="@Url.Action("SignUp")">Sign-Up here</a></p>
        </div>
    </form>
</div>