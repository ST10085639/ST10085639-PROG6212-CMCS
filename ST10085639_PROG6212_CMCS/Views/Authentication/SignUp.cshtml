@model ST10085639_PROG6212_CMCS.Models.User

<style>
    body {
        margin: 0;
        font-family: 'Helvetica Neue', Arial, sans-serif;
        color: white;
        background: linear-gradient(to bottom right, #004e92, #000428, #004e92);
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .signup-container {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 30px;
        border-radius: 10px;
        max-width: 400px;
        margin: 100px auto;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
        color: white;
    }

        .signup-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .signup-container input,
        .signup-container select {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
        }

            .signup-container input[type="submit"] {
                background-color: #007bff;
                color: white;
                cursor: pointer;
                border: none;
            }

                .signup-container input[type="submit"]:hover {
                    background-color: #0056b3;
                }

        .signup-container a {
            color: #007bff;
            text-decoration: none;
        }

            .signup-container a:hover {
                text-decoration: underline;
            }

    .form-link {
        text-align: center;
        margin-top: 15px;
    }

    .role-dropdown {
        color: #333;
    }

    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .submit-style {
        background-color: red;
        color: white;
        padding: 15px 30px;
        border: none;
        border-radius: 20px;
        font-size: 1.2em;
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .submit-style:hover {
            background-color: #218838;
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
            transform: translateY(-3px);
        }

        .submit-style:active {
            transform: translateY(0);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

    .alert {
        background-color: #28a745;
        color: white;
        padding: 10px;
        border-radius: 5px;
        margin-top: 15px;
        text-align: center;
    }

    .password-container {
        position: relative;
        display: flex;
        align-items: center;
    }

        .password-container input[type="password"], .password-container input[type="text"] {
            width: 100%;
            padding-right: 30px;
        }

    .toggle-password {
        position: absolute;
        right: 10px;
        cursor: pointer;
        color: #999;
    }
</style>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="signup-container">
    <h2>Sign-Up</h2>

    <form asp-action="SignUp" method="post">
        <div>
            <label>First Name</label>
            <input asp-for="FirstName" type="text" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div>
            <label>Last Name</label>
            <input asp-for="LastName" type="text" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div>
            <label>Email</label>
            <input asp-for="Email" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label>Password</label>
            <div class="password-container">
                <input asp-for="Password" type="password" id="password" />
                <i class="fas fa-eye toggle-password" onclick="togglePasswordVisibility('password', this)"></i>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div>
            <label>Confirm Password</label>
            <div class="password-container">
                <input asp-for="ConfirmPassword" type="password" id="confirmPassword" />
                <i class="fas fa-eye toggle-password" onclick="togglePasswordVisibility('confirmPassword', this)"></i>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div>
            <label>Role</label>
            <select asp-for="Role">
                <option value="" disabled selected>Select a role</option>
                <option value="Lecturer">Lecturer</option>
                <option value="Programme Coordinator">Programme Coordinator</option>
                <option value="Academic Manager">Academic Manager</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="button-container">
            <button type="submit" class="submit-style">Sign-Up</button>
        </div>

        <div class="form-link">
            <p>Already have an account? <a href="@Url.Action("Login")">Login here</a></p>
        </div>
    </form>
</div>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">@ViewData["Message"]</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePasswordVisibility(fieldId, icon) {
            var field = document.getElementById(fieldId);
            if (field.type === "password") {
                field.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                field.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
}