@* References: *@

@model ST10085639_PROG6212_CMCS.Models.Claim

<style>
    body {
        margin: 0;
        font-family: 'Helvetica Neue', Arial, sans-serif;
        color: white;
        background: linear-gradient(to bottom right, #004e92, #000428, #004e92);
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .form-container {
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 20px;
        border-radius: 8px;
        max-width: 600px;
        margin: auto;
    }

    h2 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        background-color: #fff;
        color: #333;
    }

    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .submit-style {
        background-color: red;
        color: white;
        padding: 15px 30px;
        border: none;
        border-radius: 20px;
        font-size: 1.2em;
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .submit-style:hover {
            background-color: #218838;
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
            transform: translateY(-3px);
        }

        .submit-style:active {
            transform: translateY(0);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

    .ClearFields-style {
        background-color: red;
        color: white;
        padding: 15px 30px;
        border: none;
        border-radius: 20px;
        font-size: 1.2em;
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .ClearFields-style:hover {
            background-color: #218838;
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
            transform: translateY(-3px);
        }

        .ClearFields-style:active {
            transform: translateY(0);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

    .alert {
        background-color: #28a745;
        color: white;
        padding: 10px;
        border-radius: 5px;
        margin-top: 15px;
        text-align: center;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
    }
</style>

<div class="form-container">
    <h2>Submit Claim</h2>

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["ErrorMessage"]
        </div>
    }

    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Message"]
        </div>
    }

    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label>Lecturer Name</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-person-fill" style="color: black;"></i>
                </span>
                <input asp-for="LecturerName" type="text" class="form-control" />
            </div>
            <span asp-validation-for="LecturerName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Start Date</label>
            <input asp-for="StartDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>End Date</label>
            <input asp-for="EndDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Hours Worked</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-clock-fill" style="color: black;"></i>
                </span>
                <input asp-for="HoursWorked" type="number" id="HoursWorked" class="form-control" />
            </div>
            <span asp-validation-for="HoursWorked" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Hourly Rate</label>
            <div class="input-group">
                <span class="input-group-text" style="color: black;">R/hr</span>
                <input asp-for="HourlyRate" type="number" step="0.01" id="HourlyRate" class="form-control" />
            </div>
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Upload Document</label>
            <input type="file" name="document" class="form-control" />
            <span asp-validation-for="DocumentPath" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Total Amount</label>
            <div class="input-group">
                <span class="input-group-text" style="color: black;">R</span>
                <input type="text" id="TotalAmount" class="form-control" readonly />
            </div>
        </div>

        <div class="button-container">
            <button type="submit" class="submit-style">Submit</button>
        </div>

        <div class="button-container">
            <button type="reset" class="ClearFields-style">Clear Fields</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function calculateTotal() {
            const hoursWorked = parseFloat(document.getElementById("HoursWorked").value) || 0;
            const hourlyRate = parseFloat(document.getElementById("HourlyRate").value) || 0;
            const totalAmount = (hoursWorked * hourlyRate).toFixed(2);
            document.getElementById("TotalAmount").value = totalAmount;
        }

        document.getElementById("HoursWorked").addEventListener("input", calculateTotal);
        document.getElementById("HourlyRate").addEventListener("input", calculateTotal);
    </script>
}